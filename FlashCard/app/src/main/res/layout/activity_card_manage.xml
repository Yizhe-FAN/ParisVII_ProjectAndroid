<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android_projet.yizhe_xiang.flashcard.manage.CardManageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarmanager"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorMyBlue"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/MyMenuTheme"
        app:titleTextColor="@android:color/white">

        <Button
            android:id="@+id/bAddCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_tb_selector" />

        <Button
            android:id="@+id/bDeleteCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_tb_selector" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/cardManage_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
